<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp" >

    <ImageView
        android:id="@+id/datalog_list_item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:src="@drawable/ic_datalog_list_item" />

    <View
        android:id="@+id/datalog_list_item_divider"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/datalog_list_item_icon"
        android:background="?android:attr/dividerVertical" />

    <TextView
        android:id="@+id/datalog_list_item_name"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/datalog_list_item_divider"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/datalog_list_item_adress"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/datalog_list_item_divider"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
